<div class="container">
  <h2>チャットルーム</h2><br/>
  <div class="talk_room">
    <% if user_signed_in? %>
      <div class="chat-field">
        <% @messages.each do |message| %>
          <% if message.is_user %>
            <div class="text-md-right right-message">
              <p><%= message.content %></p>
            </div>
          <% else %>
            <div class="text-md-left left-message">
              <p><%= message.content %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    <% elsif producer_signed_in?%>
      <div class="chat-field">
        <% @messages.each do |message| %>
          <% if message.is_user %>
            <div class="text-md-left left-message">
              <p><%= message.content %></p>
            </div>
          <% else %>
            <div class="text-md-right right-message">
              <p><%= message.content %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <br>
    <%= form_for [@room, @message] do |f| %>
      <%= f.text_field :content , class: "form-control "%><br/>
      <%= f.submit "メッセージを送る",class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
