<div class="container" style="padding-top:2.5rem; padding-bottom:2.5rem;">
  <div class="mx-auto p-4  border border-info rounded" style="border:solid 1px; max-width:40rem;">
    <h3 class="home_title text-primary text-center">支払い画面</h3><br/>
    <div class="text-center mx-auto p-3  border border-primary rounded" style="max-width:25rem;">
      <% if @product.image.attached? %>
        <td><%= image_tag @product.image.variant(combine_options:{gravity: :center,border:'2', resize:"180x180^",crop:"220x220+0+0"}).processed ,class: "rounded" ,style: "padding-top:1rem;"%></td>
      <% end %>
      <p class="text-primary font-weight-bold" style="padding-top:1rem;"><%= @product.title %></p>
      <h5 class="text-primary">¥<%= @product.price %></h5>
    </div>

    <hr>
    <div style="padding-top:1.5rem; padding-bottom:1.5rem;">
      <h5>お支払い方法</h5>
    </div>
    <% if @default_card_information.blank? %>
      <br/>
    <% else %>
      <% #以下カード情報を表示 %>
      <%= "**** **** **** " + @default_card_information.last4 %>
      <% exp_month = @default_card_information.exp_month.to_s %>
      <% exp_year = @default_card_information.exp_year.to_s.slice(2,3) %>
      <%= exp_month + " / " + exp_year %>
    <% end %>
    <div style="padding-top:1.5rem; padding-bottom:1.5rem;">
      <%= form_tag(action: :pay, method: :post) do %>
        <button class="btn btn-info mb-1 float-right" >購入する</button>
      <% end %>
    </div>
  </div>
</div>
