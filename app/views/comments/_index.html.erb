<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li class="list-unstyled">
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <div class="form-control"><%= comment.content %></div>
        <%= link_to "コメント編集", edit_product_comment_path(product, comment), remote: true , class: "btn btn-primary"%>
        <%= link_to "コメント削除", product_comment_path(comment.product_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} , class: "btn btn-primary"%>
      </li>
    <% end %>
    <br>
  <% end %>
</ul>
