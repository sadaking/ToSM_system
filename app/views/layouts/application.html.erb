<!DOCTYPE html>
<html>
  <head>
    <title>FarmProductsMarket</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <%= link_to  products_path, method: :get do %>
              <i class="fas fa-seedling fa-3x"></i>
            <% end %>
            <% if user_signed_in? %>
              <li class="nav-item active nav-link">
                ~<%= current_user.name %>がログインしてます~
              </li>
              <li class="nav-item active">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link'%>
              </li>
              <li class="nav-item active">
                <%= link_to "プロフィール", user_path(current_user.id), class: 'nav-link'%>
              </li>
              <li class="nav-item active">
                <%= link_to "生産者とのメッセージはこちら", message_tops_path, class: 'nav-link'%>
              </li>
            <% elsif producer_signed_in? %>
              <li class="nav-item active nav-link">
                ~<%= current_producer.producer_name %>がログインしてます~
              </li>
              <li class="nav-item active">
                <%= link_to "商品を出品", new_product_path, class: 'nav-link'%>
              </li>
              <li class="nav-item active">
                <%= link_to "ログアウト", destroy_producer_session_path ,:method => :delete, class: 'nav-link' %>
              </li>
              <li class="nav-item active">
                <%= link_to "ユーザーとのメッセージはこちら", message_tops_path, class: 'nav-link'%>
              </li>
            <% else %>
              <li class="nav-item active">
                <%= link_to "ユーザー新規登録", new_user_registration_path, class: 'nav-link'%>
              </li>
              <li class="nav-item active">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link'%>
              </li>
            <% end %>
            <li class="nav-item active">
              <%= link_to "生産者新規登録ぜひぜひ", new_producer_registration_path, class: 'nav-link'%>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
