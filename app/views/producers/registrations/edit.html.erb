<br/>
<div class="mx-auto p-4 border border-primary rounded" style="border:solid 1px #343a40; max-width:700px;">
  <h3><%= t('.producer_title', resource: resource.model_name.human) %></h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :producer_name %><br />
      <%= f.text_field :producer_name, autofocus: true, autocomplete: "name" , class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :producer_avatar, class: "btn btn-info" do %>
        <i class="far fa-image"> プロフィール画像ファイルを選択</i>
      <% end %>
      <%= f.file_field :producer_avatar, class: "image_form", style: "display: none;"%>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
    <% end %>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :producer_postal_code %><br />
        <%= f.text_field :producer_postal_code, autofocus: true, placeholder: 'postal_code', class: "postal_code form-control", id: "address_zipcode" %>
      </div>

      <div class="form-group col">
        <%= f.label :producer_prefecture_code %><br />
        <%= f.collection_select :producer_prefecture_code, JpPrefecture::Prefecture.all, :name, :name, class: "address form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :producer_address_city %><br />
      <%= f.text_field :producer_address_city, autofocus: true, autocomplete: "address_city", id: "address_city" , class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :producer_address_street %><br />
      <%= f.text_field :producer_address_street, autofocus: true, autocomplete: "address_street", placeholder: 'address_street', id: "address_street" , class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :producer_address_building %><br />
      <%= f.text_field :producer_address_building, autofocus: true, autocomplete: "address_building", placeholder: 'address_building', id: "address_building" , class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" , class: "form-control" %>
    </div>

    <hr style="margin-top:50px;">

    <div class="form-group" style="margin-top:50px;">
      <%= f.label :password_change %><br/> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i>
      <%= f.password_field :password, autocomplete: "new-password" , class: "form-control" ,placeholder: "6字以上"%>
    </div>

    <div class="form-group">
      <%= f.label :password_change_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control", placeholder: "※変更希望のパスワードをもう一度入力してください" %>
    </div>


    <div class="form-group">
      <%= f.submit t('.update') , class: "form-control btn btn-info"%>
    </div>
  <% end %>
</div>


<div class="mt-4 mx-auto p-4 border border-primary rounded" style="border:solid 1px #343a40; max-width:700px;">
  <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete ,class: " btn btn-info"%>
  <br>
  <%= link_to t('devise.shared.links.back'), :back , class: " btn btn-info"%>
</div>
